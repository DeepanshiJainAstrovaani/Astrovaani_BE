# ==============================================
# AstroVaani Backend Environment Configuration
# ==============================================

# ================== DATABASE ==================
# MongoDB Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?options
# Get this from MongoDB Atlas → Connect → Connect your application
MONGODB_URI=mongodb+srv://astrovaani_user:YOUR_PASSWORD@astrovaanicluster.xxxxx.mongodb.net/astrovaani?retryWrites=true&w=majority

# ================== SERVER ====================
# Port for the server to run on
PORT=5000

# Environment (development, production, test)
NODE_ENV=production

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Twilio Configuration (for SMS/WhatsApp)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Additional Settings
JWT_SECRET=your_jwt_secret_key_here
API_BASE_URL=https://your-domain.com/api
